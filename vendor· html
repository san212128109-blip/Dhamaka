<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Vendor Join - Dhamaka</title>
<style>
body{font-family:Arial;background:#eef2f3;padding:20px;}
input,button{padding:10px;margin:6px;width:90%;}
button{background:#28a745;color:white;border:none;border-radius:5px;cursor:pointer;transition:0.3s;}
button:hover{background:#218838;}
@media(max-width:600px){input,button{width:100%;}}
</style>
</head>
<body>
<h2>Vendor Product Submission</h2>
<input id="vendor" placeholder="Your Name">
<input id="pname" placeholder="Product Name">
<input id="price" type="number" placeholder="Product Price">
<button onclick="submitProduct()">Submit Product</button>
<p id="msg" style="color:green"></p>
<script>
let PENDING = JSON.parse(localStorage.getItem("dhamaka_pending_v2")||"[]");
function submitProduct(){
 let v=document.getElementById("vendor").value;
 let n=document.getElementById("pname").value;
 let p=document.getElementById("price").value;
 if(!v||!n||!p){ document.getElementById("msg").innerText="All fields required"; return; }
 PENDING.push({vendor:v,name:n,price:p});
 localStorage.setItem("dhamaka_pending_v2",JSON.stringify(PENDING));
 document.getElementById("msg").innerText="Product Submitted! Waiting for Admin Approval.";
 document.getElementById("vendor").value=''; document.getElementById("pname").value=''; document.getElementById("price").value='';
}
</script>
</body>
</html>
