<div class="container">
<select id="vendorFilter" onchange="renderShop()">
<option value="All">All Vendors</option>
</select>
<div id="shopArea"></div>
</div>
<script>
let PRODUCTS = JSON.parse(localStorage.getItem("dhamaka_products_v2")||"[]");
let vendorSet = new Set(PRODUCTS.map(p=>p.vendor));
let vendorSelect = document.getElementById('vendorFilter');
vendorSet.forEach(v=>{ let o=document.createElement('option'); o.value=v;o.innerText=v; vendorSelect.appendChild(o); });

function renderShop(){
 let html = "<h3>Available Products</h3>";
 let filter = document.getElementById('vendorFilter').value;
 let filtered = filter==='All'? PRODUCTS : PRODUCTS.filter(p=>p.vendor===filter);
 if(filtered.length==0){ html += "<p>No products found.</p>" }
 filtered.forEach(p=>{
 html += `<div class='product'><b>${p.name}</b><br>Price: ${p.price} Tk<br>Vendor: ${p.vendor}</div>`;
 });
 document.getElementById("shopArea").innerHTML = html;
}
renderShop();
</script>
</body>
</html>
